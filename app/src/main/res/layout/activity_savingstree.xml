<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/savings_trees__1_"
    tools:context=".savingstree">

    <Button
        android:id="@+id/addToSavingsTree"
        android:layout_width="178dp"
        android:layout_height="63dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/archivo"
        android:text="Add to savings tree"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createGoal"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginTop="196dp"
        android:fontFamily="@font/archivo"
        android:text="Create new goal"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toEndOf="@+id/addToSavingsTree"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>